  "dependencies": {
    "@electron/remote": "^2.1.1",
    "@types/source-map-support": "^0.5.10",
    "electron-context-menu": "^3.6.1",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "isaac-racing-common": "^1.0.13",
    "isaacscript-common-ts": "^13.1.8",
    "klaw-sync": "^6.0.0",
    "linkify-html": "^4.1.3",
    "linkifyjs": "^4.1.3",
    "mkdirp": "^3.0.1",
    "ps-node": "^0.1.6",
    "simple-vdf": "^1.1.1",
    "source-map-support": "^0.5.21",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.29",
    "@types/klaw-sync": "^6.0.5",
    "@types/mkdirp": "^1.0.2",
