{
  "name": "isaac-racing-client",
  "version": "1.1.51",
  "description": "A racing mod for The Binding of Isaac: Repentance",
  "homepage": "https://isaacracing.net",
  "bugs": {
    "url": "https://github.com/Zamiell/isaac-racing-client/issues"
  },
