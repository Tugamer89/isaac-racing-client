    "type": "git",
    "url": "git+https://github.com/Zamiell/isaac-racing-client.git"
  },
  "license": "GPL-3.0",
  "author": "Racing+",
  "type": "commonjs",
  "main": "./dist/main/main.js",
  "scripts": {
    "build": "bash ./build.sh",
