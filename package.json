    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "packageManager": "yarn@4.0.2",
  "build": {
    "appId": "org.electron.IsaacRacingPlus",
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./static/**/*"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
